@model SIEVK.Domain.RKPD.RKPDKinerjaProgram

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <style>
        .controls {
            margin-bottom: 20px;
            margin-right: 10px;
        }
    </style>
</head>
<body>
    @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal", @name = "frmRealisasi", @ng_app = "RealisasiApp", @data_ng_controller = "validateCtrl" }))
{
        @Html.AntiForgeryToken()

        <div class="span12">
            @if (!Html.ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    @Html.ValidationSummary()
                </div>
            }
            <div class="widget">
                <div class="widget-header">
                    <i class="icon-file"></i>
                    <h3>Evaluasi Kinerja Program - @ViewBag.Method</h3>
                </div>
                <div class="widget-content">
                    <fieldset>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => Model.UNITKEY)
                        @Html.HiddenFor(model => Model.KDTAHAP)
                        @Html.HiddenFor(model => Model.KDTAHUN)
                        @Html.HiddenFor(model => Model.IDPRGRM)
                        @Html.HiddenFor(model => Model.KINPGRKPDKEY)

                        <div class="form-group">
                            <label class="control-label" for="pagu1">Target</label>
                            <div class="controls">
                                <label class="value-label">@Model.TARGET</label>
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <label class="control-label" for="realisasi1">Realisasi Target 1<i class="icon-asterisk supscript"></i></label>
                            <div class="controls">
                                @Html.TextBoxFor(model => Model.REALTAR1, new { @class = "span3",  @ng_required = "true", @ng_model = "REALTAR1" })
                                <span style="color:maroon" ng-show="frmRealisasi.REALTAR1.$dirty && frmRealisasi.REALTAR1.$invalid">
                                    <span ng-show="frmRealisasi.REALTAR1.$error.required">Realisasi Target 1 harus diisi</span>
                                </span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label" for="realisasi2">Realisasi Target 2<i class="icon-asterisk supscript"></i></label>
                            <div class="controls">
                                @Html.TextBoxFor(model => Model.REALTAR2, new { @class = "span3", @ng_required = "true", @ng_model = "REALTAR2" })
                                <span style="color:maroon" ng-show="frmRealisasi.REALTAR2.$dirty && frmRealisasi.REALTAR2.$invalid">
                                    <span ng-show="frmRealisasi.REAL2.$error.required">Realisasi Target 2 harus diisi</span>
                                </span>
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <label class="control-label" for="realisasi3">Realisasi Target 3<i class="icon-asterisk supscript"></i></label>
                            <div class="controls">
                                @Html.TextBoxFor(model => Model.REALTAR3, new { @class = "span3", @ng_required = "true", @ng_model = "REALTAR3" })
                                <span style="color:maroon" ng-show="frmRealisasi.REALTAR3.$dirty && frmRealisasi.REALTAR3.$invalid">
                                    <span ng-show="frmRealisasi.REALTAR3.$error.required">Realisasi Target 3 harus diisi</span>
                                </span>
                            </div>
                        </div>        

                        <div class="form-group">
                            <label class="control-label" for="realisasi4">Realisasi Target 4<i class="icon-asterisk supscript"></i></label>
                            <div class="controls">
                                @Html.TextBoxFor(model => Model.REALTAR4, new { @class = "span3", @ng_required = "true", @ng_model = "REALTAR4" })
                                <span style="color:maroon" ng-show="frmRealisasi.REALTAR4.$dirty && frmRealisasi.REALTAR4.$invalid">
                                    <span ng-show="frmRealisasi.REALTAR4.$error.required">Realisasi Target 4 harus diisi</span>
                                </span>
                            </div>
                        </div>        

                        <div class="form-group">
                            <label class="control-label" for="realisasiakhir">Realisasi Target Akhir<i class="icon-asterisk supscript"></i></label>
                            <div class="controls">
                                @Html.TextBoxFor(model => Model.REALTARAKHIR, new { @class = "span3", @ng_required = "true", @ng_model = "REALTARAKHIR" })
                                <span style="color:maroon" ng-show="frmRealisasi.REALTARAKHIR.$dirty && frmRealisasi.REALTARAKHIR.$invalid">
                                    <span ng-show="frmRealisasi.REALTARAKHIR.$error.required">Realisasi Target Akhir harus diisi</span>
                                </span>
                            </div>
                        </div>        

                        <div class="form-group">
                            <label class="control-label" for="ket">Keterangan</label>
                            <div class="controls">
                                @Html.TextAreaFor(model => Model.KET, new { @class = "span4", @rows="3"})
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label" for="ctt">Catatan Penting</label>
                            <div class="controls">
                                @Html.TextAreaFor(model => Model.CTT, new { @class = "span4", @rows = "3" })
                            </div>
                        </div>

                        <div class="form-actions">
                            <button type="submit" class="btn btn-primary" ng-disabled="frmRealisasi.$invalid">
                                <i class=" btn-icon-only icon-save">
                                </i>Simpan
                            </button>

                            <button type="button" class="btn btn-default" id="btnClose"><i class="btn-icon-only icon-reply"> Kembali </i></button>
                        </div>
                    </fieldset>
                </div>
            </div>
        </div>

    }

</body>
</html>

<script>                                                                            
    jQuery("#btnClose").click(function () { jQuery(location).attr("href", "@Html.Raw(@Url.Content("~/RKPD/RealisasiKinerjaProgram?unitKey=" + Model.UNITKEY + "&kdTahap=" + Model.KDTAHAP + "&kdTahun=" + Model.KDTAHUN + "&idPrgrm=" + Model.IDPRGRM + "&kinPgRKPDKey="+ Model.KINPGRKPDKEY))"); });

    $(function () {
        $('.form-horizontal').submit(function () {
            $("input[type='submit']", this)
              .val("Please Wait...")
              .attr('disabled', 'disabled');
            return true;
        });
    });

    var app = angular.module('RealisasiApp', []);
    app.controller('validateCtrl', function ($scope) {
        $scope.REALTAR1 = '@Model.REALTAR1.Replace(System.Environment.NewLine, "")';
        $scope.REALTAR2 = '@Model.REALTAR2.Replace(System.Environment.NewLine, "")';
        $scope.REALTAR3 = '@Model.REALTAR3.Replace(System.Environment.NewLine, "")';
        $scope.REALTAR4 = '@Model.REALTAR4.Replace(System.Environment.NewLine, "")';
        $scope.REALTARAKHIR = '@Model.REALTARAKHIR.Replace(System.Environment.NewLine, "")';

    });

    jQuery(document).ready(function () {
        jQuery(".currency").autoNumeric('init', { aSep: '.', aDec: ',', aSign: ' ', mDec: 0 });
    })

</script>
