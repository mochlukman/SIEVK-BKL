@{
    ViewBag.Title = "RKPD - Catatan Laporan Realisasi SKPD";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script>
    var deleteStatus = true;
    var IDdelete = 0;

    var kdUnit = '@ViewBag.kdUnit';
    var kdTahun = '@ViewBag.kdTahun';
    var kdTriwulan = '@ViewBag.kdTriwulan';
    var kdFaktor = '@ViewBag.kdFaktor';

    $(document).ready(function () {

        $('[data-toggle="tooltip"]').tooltip();

        if (kdUnit != "") {
            $('#UnitKodeSelected').val(kdUnit);
            document.getElementById("unitorganisasi-flexdatalist").value = '@ViewBag.flexdatalist';
        }

        $("#list").DataTable({
            "processing": false, // for show progress bar
            "serverSide": true, // for process server side
            "filter": true, // this is for disable filter (search box)
            "orderMulti": false, // for disable multiple column at once
            "pageLength": 10,
            "scrollCollapse": true,
            "scrollX": true,
            "scrollY": "350px", //cukup untuk 10 row
            "ajax": {
                "url": '@Url.Content("~/")' + "RKPD/LoadDataCatatanLaporanRealisasiSKPD",
                "type": "POST",
                "datatype": "json",
                "data": {
                    "unitKey": function () { return $('#UnitKodeSelected').val() },
                    "kdTahun": function () { return $('#TahunAnggaranCombo').val() },
                    "kdTriwulan": function () { return $('#TriwulanCombo').val() }
                }
            },
            "columnDefs":
            [            
            {
                "targets": [4,5,6],
                "visible": false,
                "searchable": false
            }
            ],
            "fixedColumns": {
                "leftColumns": 0
            },
            "columns": [
                { "data": "KDFAKTOR", "name": "KDFAKTOR", "autoWidth": true }, //bisa ditamhakan title
                  { "data": "NMCTT", "name": "NMCTT", "autoWidth": true },
                  { "data": "ISICTT", "name": "ISICTT", "autoWidth": true },
                  {
                      "render": function (data, type, full, meta) {
                          return '<a class="btn btn-md btn-success icon-edit" data-toggle="tooltip" data-placement="top" title="Ubah Realisasi" href="@Url.Action("CatatanLaporanRealisasiSKPDEdit", "RKPD")' + "?unitKey=" + full.UNITKEY + "&kdTahun=" + full.KDTAHUN + "&kdTriwulan=" + full.KDTRWN + "&kdFAKTOR=" + full.KDFAKTOR + '"></a>&nbsp;' +
                          '<a class="OpenModal btn btn-md btn-danger icon-trash" data-toggle="tooltip" data-placement="top" title="Hapus Realisasi" data-nmprgrm="' + full.NMCTT + '" href="#confirm-delete"></a>';

                      }
                  },
                  { "data": "UNITKEY", "name": "UNITKEY", "autoWidth": true }, // hide
                  { "data": "KDTRWN", "name": "KDTRWN", "autoWidth": true }, // hide
                  { "data": "KDTAHUN", "name": "KDTAHUN", "autoWidth": true }   // hide       
            ]
        });

    });

    </script>

</head>
<body>
    @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal", @name = "frmCatatanLaporanRealisasi", @ng_app = "RKPDApp", @data_ng_controller = "validateCtrl" }))
    {
        <div class="span12">
            @if (!Html.ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    @Html.ValidationSummary()
                </div>
            }

            @if (ViewBag.Info != "" && ViewBag.Info != null)
            {
                <div class="alert alert-success">@ViewBag.Info</div>
            }
            <div class="alert-delete"></div>
            <div class="widget">
                <div class="widget-header">
                    <i class="icon-list-alt"></i>
                    <h3>Evaluasi RKPD - Catatan Laporan Realisasi SKPD</h3>
                </div>
                <div class="widget-content">
                    <fieldset>
                        <div class="form-group">
                            <label class="control-label" for="Unit">Unit Organisasi</label>
                            <div class="controls-filter">
                                <input type="text" id="unitorganisasi" name="unitorganisasi" ng-invalid ng-model="unitorganisasi" class="form-control input-sm flexdatalist span6" placeholder='Isi Nama Unit Organisasi' required>
                                @Html.Hidden("UnitKodeSelected")
                                @Html.Hidden("UnitNameSelected")
                                <span style="color:maroon" ng-show="frmCatatanLaporanRealisasi.unitorganisasi.$dirty && frmCatatanLaporanRealisasi.unitorganisasi.$invalid">
                                    <span ng-show="frmCatatanLaporanRealisasi.unitorganisasi.$error.required">Unit Organisasi harus diisi</span>
                                </span>
                            </div>
                        </div>     
                        <div class="form-group">
                            <label class="control-label" for="TahunAnggaranCombo">Tahun Anggaran</label>
                            <div class="controls-filter">
                                @Html.DropDownList("TahunAnggaranCombo", null, new { @class = "form-control input-sm span2" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="TriwulanCombo">Triwulan</label>
                            <div class="controls-filter">
                                @Html.DropDownList("TriwulanCombo", null, new { @class = "form-control input-sm span2" })
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <div class="controls-filter">
                                <button type="button" class="btn btn-primary" id="btnCari" ng-disabled="frmCatatanLaporanRealisasi.$invalid"><i class="btn-icon-only icon-search"> Cari </i></button>
                                <button type="button" class="btn btn-success" id="btnTambah"><i class="btn-icon-only icon-plus"> Tambah </i></button>
                            </div>
                        </div>
                    </fieldset>
                </div>
            </div>
        </div>

        <div class="span12">
            <div class="widget">
                <div class="widget-content">
                    <table id="list" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Jenis</th>
                                <th>Catatan</th>
                                <th>Isi Catatan</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>

        <div class="modal fade" id="confirm-delete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">

                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title" id="myModalLabel">Konfirmasi Hapus</h4>
                    </div>

                    <div class="modal-body">
                        <p>Apakah anda yakin menghapus data <b><i class="nmprgrm"></i></b> ?</p>
                        <p class="debug-url"></p>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Batal</button>
                        <a class="btn btn-danger btn-ok">Hapus</a>
                    </div>
                </div>
            </div>
        </div>

    }
</body>
</html>

<script>
    jQuery(document).ready(function () {

        @*if ('@ViewBag.HasUnitKey' == "True") {
            document.getElementById("unitorganisasi-flexdatalist").disabled = true;
        }*@

        jQuery("#btnTambah").click(function () {
            kdUnit = $('#UnitKodeSelected').val();
            if (kdUnit == "") {
                return;
            }
            kdTahun = $('#TahunAnggaranCombo').val();
            if(kdTahun == ""){
                return;
            }
            kdTriwulan = $('#TriwulanCombo').val();
            if (kdTriwulan == "") {
                return;
            }

            window.location.href = '@Url.Action("CatatanLaporanRealisasiSKPDCreate", "RKPD")' + "?unitKey=" + kdUnit + "&kdTahun=" + kdTahun + "&kdTriwulan=" + kdTriwulan;

        });       

        var table = $("#list").DataTable();
        $('#list tbody').on('click', 'tr', function () {
            var sData = table.row(this).data()
            kdFaktor = sData["KDFAKTOR"];
        });

    });

    $('.flexdatalist').flexdatalist({
        cache: false,
        searchContain: true,
        textProperty: '{KDUNIT}' + ' ' + '{NMUNIT}',
        valueProperty: 'iso2',
        minLength: 0,
        focusFirstResult: true,
        selectionRequired: true,
        noResultsText: 'Tidak ada hasil untuk "{keyword}"',
        visibleProperties: ["KDUNIT", "NMUNIT"],
        searchIn: ["KDUNIT", "NMUNIT"],
        url: '@Url.Content("~/")' + 'RENJA/GetUnitOrganization/',
        relatives: '#relative'
    }).on("select:flexdatalist", function (event, data) {
        $('#UnitKodeSelected').val(data.UNITKEY);
        $('#UnitNameSelected').val(data.NMUNIT);
    });

    function reloadDataGrid() {
        var table = $("#list").DataTable();
        table.ajax.reload();
    }

    $("#btnCari").click(function () {
        reloadDataGrid();        
    });

   

    var app = angular.module('RKPDApp', []);
    app.controller('validateCtrl', function ($scope) {
    });

    

    //delete function
    $(document).on("click", ".btn-ok", function (e) {
        if (deleteStatus == true) //only 1 working in 1 click ok function
        {
            var url = '@Url.Content("~/")' + "RKPD/DeleteCatatanLaporanRealisasiSKPD";
            $.post(url, { unitKey: $('#UnitKodeSelected').val(), kdtahun: $('#TahunAnggaranCombo').val(), kdTriwulan: $('#TriwulanCombo').val(), kdFaktor: kdFaktor }, function (data) {
                if (data == "Deleted") {
                    reloadDataGrid();
                    // add alert after delete
                    addAlert();
                }
                else {
                    alert("Terjadi kesalahan! Error" + data);
                }
            });
            deleteStatus = false;
            $('#confirm-delete').modal('hide');//if success then hide
        }

    })

    $(document).on("click", ".OpenModal", function (e) {
        e.preventDefault();
        deleteStatus = true;
        var _self = $(this);
        var nmprgrm = _self.data('nmprgrm');
        $(".nmprgrm").text(nmprgrm);

        $(_self.attr('href')).modal('show');
    });

    function addAlert() {
        var nmprgrm = $(".nmprgrm").text();
        var div = document.createElement('div');
        div.className = 'alert alert-success';
        div.innerHTML =
            '<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>\
                 Realisasi program <b>' + nmprgrm + '</b> berhasil dihapus.';

        document.getElementsByClassName("alert-delete")[0].appendChild(div);
    }


</script>