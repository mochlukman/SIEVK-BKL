@{
    ViewBag.Title = "Log In";
}


<div class="account-container">

    <div class="content clearfix">

        <form action="~/Login/Logon" method="post" ng-app="LoginApp" ng-controller="validateCtrl" name="frmLogin" novalidate>

            <h1>Login</h1>

            <div class="login-fields">

                <br>
                @if (!string.IsNullOrEmpty(TempData["ErrorMsg"].ToString()))
                {

                    <div class="alert alert-danger">@Html.Raw(TempData["ErrorMsg"].ToString())</div>
                }

                <div class="field">
                    <label for="username">Username: </label>
                    <input type="text" id="username" name="username" value="" ng-model="username" placeholder="Username" class="login username-field" required/>
                    <span style="color:maroon" ng-show="frmLogin.username.$dirty && frmLogin.username.$invalid">
                        <span ng-show="frmLogin.username.$error.required">Username harus diisi.</span>
                    </span>
                    
                </div> <!-- /field -->

                <div class="field">
                    <label for="password">Password: </label>
                    <input type="password" id="password" name="password" value="" ng-model="password" placeholder="Password" class="login password-field" required/>
                    <span style="color: maroon" ng-show="frmLogin.password.$dirty && frmLogin.password.$invalid">
                        <span ng-show="frmLogin.password.$error.required">Password harus diisi.</span>
                    </span>
                </div> <!-- /password -->

            </div> <!-- /login-fields -->

            <div class="login-actions">

                <button class="button btn btn-primary btn-large" ng-disabled="frmLogin.username.$dirty && frmLogin.username.$invalid ||
                        frmLogin.password.$dirty && frmLogin.password.$invalid">
                    Log In
                </button>

            </div> <!-- .actions -->



        </form>
    </div> <!-- /content -->

</div> <!-- /account-container -->

<script>
    var app = angular.module('LoginApp', []);
    app.controller('validateCtrl', function ($scope) {
        $scope.username = '';
    });
</script>