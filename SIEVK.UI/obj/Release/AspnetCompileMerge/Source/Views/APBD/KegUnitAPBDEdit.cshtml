@model SIEVK.Domain.APBD.APBDKinerja

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <style>
        .controls {
            margin-bottom: 20px;
            margin-right: 10px;
        }
    </style>
</head>
<body>
    @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal", @name = "frmKegUnitAPBD", @ng_app = "RealisasiApp", @data_ng_controller = "validateCtrl" }))
{
        @Html.AntiForgeryToken()

        <div class="span12">
            @if (!Html.ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    @Html.ValidationSummary()
                </div>
            }
            <div class="widget" >
                <div class="widget-header">
                    <i class="icon-file"></i>
                    <h3>Kegiatan Unit APBD - @ViewBag.Method</h3>
                </div>
                <div class="widget-content">
                    <fieldset>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => Model.UNITKEY)
                        @Html.HiddenFor(model => Model.KDTAHAP)
                        @Html.HiddenFor(model => Model.KDTAHUN)
                        @Html.HiddenFor(model => Model.IDKEG)
                        @Html.HiddenFor(model => Model.IDPRGRM)
                        @*<input type="hidden" name="IDPRGRM" value="@ViewBag.idPrgrm" />*@

                        <div class="form-group">
                            <label class="control-label" for="KODE">Kode<i class="icon-asterisk supscript"></i></label>
                            <div class="controls" style="padding-top:5px;">
                                @if (ViewBag.Method == "Edit")
                                {
                                    @Model.NUKEG
                                }

                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label" for="KEGIATAN">Kegiatan<i class="icon-asterisk supscript"></i></label>
                            <div class="controls" style="padding-top:5px;">
                                @if (ViewBag.Method == "Edit")
                                {
                                    @Model.NMKEG
                                }

                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label" for="URKIN">Indikator Kerja<i class="icon-asterisk supscript"></i></label>
                            <div class="controls">
                                @Html.TextBoxFor(model => Model.URKIN, new { @class = "span3", @ng_required = "true", @ng_model = "URKIN" })
                                <span style="color:maroon" ng-show="frmRealisasi.URKIN.$dirty && frmRealisasi.URKIN.$invalid">
                                    <span ng-show="frmRealisasi.URKIN.$error.required">Indikator Kerja harus diisi</span>
                                </span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label" for="TARGET">Target<i class="icon-asterisk supscript"></i></label>
                            <div class="controls">
                                @Html.TextBoxFor(model => Model.TARGET, new { @class = "span3", @ng_required = "true", @ng_model = "TARGET" })
                                <span style="color:maroon" ng-show="frmRealisasi.TARGET.$dirty && frmRealisasi.TARGET.$invalid">
                                    <span ng-show="frmRealisasi.TARGET.$error.required">Target harus diisi</span>
                                </span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label" for="PAGU">PAGU<i class="icon-asterisk supscript"></i></label>
                            <div class="controls">
                                @Html.TextBoxFor(model => Model.PAGU, new { @class = "span3 currency", @ng_required = "true", @ng_model = "PAGU" })
                                <span style="color:maroon" ng-show="frmRealisasi.PAGU.$dirty && frmRealisasi.PAGU.$invalid">
                                    <span ng-show="frmRealisasi.PAGU.$error.required">Realisasi Anggaran harus diisi</span>
                                </span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="span4">
                                <div class="form-group">
                                    <label class="control-label" for="ANGKAS1">ANGKAS1<i class="icon-asterisk supscript"></i></label>
                                    <div class="controls">
                                        @Html.TextBoxFor(model => Model.ANGKAS1, new { @class = "span3 currency", @ng_required = "true", @ng_model = "ANGKAS1" })
                                        <span style="color:maroon" ng-show="frmRealisasi.ANGKAS1.$dirty && frmRealisasi.ANGKAS1.$invalid">
                                            <span ng-show="frmRealisasi.ANGKAS1.$error.required">ANGKAS1 harus diisi</span>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="span8">
                                <div class="form-group">
                                    <label class="control-label" for="ANGKAS2">ANGKAS2<i class="icon-asterisk supscript"></i></label>
                                    <div class="controls">
                                        @Html.TextBoxFor(model => Model.ANGKAS2, new { @class = "span3 currency", @ng_required = "true", @ng_model = "ANGKAS2" })
                                        <span style="color:maroon" ng-show="frmRealisasi.ANGKAS2.$dirty && frmRealisasi.ANGKAS2.$invalid">
                                            <span ng-show="frmRealisasi.ANGKAS2.$error.required">ANGKAS2 harus diisi</span>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="span4">
                                <div class="form-group">
                                    <label class="control-label" for="ANGKAS3">ANGKAS3<i class="icon-asterisk supscript"></i></label>
                                    <div class="controls">
                                        @Html.TextBoxFor(model => Model.ANGKAS3, new { @class = "span3 currency", @ng_required = "true", @ng_model = "ANGKAS3" })
                                        <span style="color:maroon" ng-show="frmRealisasi.ANGKAS3.$dirty && frmRealisasi.ANGKAS3.$invalid">
                                            <span ng-show="frmRealisasi.ANGKAS3.$error.required">ANGKAS3 harus diisi</span>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="span8">
                                <div class="form-group">
                                    <label class="control-label" for="ANGKAS4">ANGKAS4<i class="icon-asterisk supscript"></i></label>
                                    <div class="controls">
                                        @Html.TextBoxFor(model => Model.ANGKAS4, new { @class = "span3 currency", @ng_required = "true", @ng_model = "ANGKAS4" })
                                        <span style="color:maroon" ng-show="frmRealisasi.ANGKAS4.$dirty && frmRealisasi.ANGKAS4.$invalid">
                                            <span ng-show="frmRealisasi.ANGKAS4.$error.required">ANGKAS4 harus diisi</span>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label" for="LOKASI">Lokasi<i class="icon-asterisk supscript"></i></label>
                            <div class="controls">
                                @Html.TextBoxFor(model => Model.LOKASI, new { @class = "span3", @ng_required = "true", @ng_model = "LOKASI" })
                                <span style="color:maroon" ng-show="frmRealisasi.Lokasi.$dirty && frmRealisasi.Lokasi.$invalid">
                                    <span ng-show="frmRealisasi.Lokasi.$error.required">Target harus diisi</span>
                                </span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label" for="KET">Keterangan</label>
                            <div class="controls">
                                @Html.TextAreaFor(model => Model.KET, new { @class = "span4", @rows = "3" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label" for="CTT">CTT</label>
                            <div class="controls">
                                @Html.TextAreaFor(model => Model.CTT, new { @class = "span4", @rows = "3" })
                            </div>
                        </div>

                        <div class="form-actions">
                            <button type="submit" class="btn btn-primary" ng-disabled="frmRealisasi.$invalid">
                                <i class=" btn-icon-only icon-save">
                                </i>Simpan
                            </button>

                            <button type="button" class="btn btn-default" id="btnClose"><i class="btn-icon-only icon-reply"> Kembali </i></button>
                        </div>
                    </fieldset>
                </div>
            </div>
        </div>

    }

</body>
</html>

<script>                                                                            
    jQuery("#btnClose").click(function () { jQuery(location).attr("href", "@Html.Raw(@Url.Content("~/APBD/RealisasiKinerjaAPBD?unitKey=" + Model.UNITKEY + "&kdTahap=" + Model.KDTAHAP + "&kdTahun=" + Model.KDTAHUN + "&idPrgrm=" + ViewBag.idPrgrm + "&idKeg=" + Model.IDKEG))"); });

    $(function () {
        $('.form-horizontal').submit(function () {
            $("input[type='submit']", this)
              .val("Please Wait...")
              .attr('disabled', 'disabled');
            return true;
        });
    });

    var app = angular.module('RealisasiApp', []);
    app.controller('validateCtrl', function ($scope) {
        $scope.URKIN = '@Model.URKIN';
        $scope.TARGET = '@Model.TARGET';
        $scope.PAGU = '@Model.PAGU';
        $scope.ANGKAS1 = '@Model.ANGKAS1';
        $scope.ANGKAS2 = '@Model.ANGKAS2';
        $scope.ANGKAS3 = '@Model.ANGKAS3';
        $scope.ANGKAS4 = '@Model.ANGKAS4';
        
        $scope.LOKASI = '@Model.LOKASI';
        $scope.KET = '@(Model.KET != null ? Model.KET.Replace(Environment.NewLine,"") : Model.KET)';
    });

    jQuery(document).ready(function () {
        jQuery(".currency").autoNumeric('init', { aSep: '.', aDec: ',', aSign: ' ', mDec: 0 });
    })

</script>
