@{
    ViewBag.Title = "RPJPD - Evaluasi Simpul";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script>
    var deleteStatus = true;
    var IDdelete = 0;

    var nomor = '@ViewBag.nomor';    

    $(document).ready(function () {

        $('[data-toggle="tooltip"]').tooltip();

        $("#list").DataTable({
            "processing": false, // for show progress bar
            "serverSide": true, // for process server side
            "filter": true, // this is for disable filter (search box)
            "orderMulti": false, // for disable multiple column at once
            "pageLength": 10,
            "scrollCollapse": true,
            "scrollX": true,
            "scrollY": "350px", //cukup untuk 10 row
            "ajax": {
                "url": '@Url.Content("~/")' + "RPJPD/LoadDataEvaluasiSimpul",
                "type": "POST",
                "datatype": "json"
            },
            "columnDefs":
            [
                {
                    "targets": [0],
                    "searchable": true,
                    "orderable": true,
                    "fnCreatedCell": function (nTd, sData, oData, iRow, iCol) {
                        var $currencyCell = $(nTd);
                        var commaValue = $currencyCell.text().replace(/(\d)(?=(\d\d\d)+(?!\d))/g, "$1.");
                        $currencyCell.text(commaValue);
                    },
                    "className": "text-right",
                }
            ],
            "fixedColumns": {
                "leftColumns": 0
            },
                {
                "targets": [3],
                "visible": false,
                "searchable": false
            },
            "columns": [
                { "data": "NOMOR", "name": "NOMOR", "autoWidth": true }, //bisa ditambahkan
                { "data": "ASPEK", "name": "ASPEK", "autoWidth": true },
                { "data": "PENJELASAN", "name": "PENJELASAN", "autoWidth": true },
                { "data": "KET", "name": "KET", "autoWidth": true },
                { 
                    "render": function (data, type, full, meta) {
                        return '<a class="btn btn-md btn-success icon-edit" data-toggle="tooltip" data-placement="top" title="Ubah Evaluasi" href="@Url.Action("EvaluasiSimpulEdit", "RPJPD")' + "?kdTahun=" + full.KDTAHUN + "&nomor=" + full.NOMOR + '"></a>&nbsp;' +
                          '<a class="OpenModal btn btn-md btn-danger icon-trash" data-toggle="tooltip" data-placement="top" title="Hapus Data" data-nmprgrm="' + full.NMPRGRM + '" href="#confirm-delete"></a>';

                      }
                },
            ]

        });

    });

    </script>

</head>
<body>
    @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal", @name = "frmEvaluasiSimpul", @ng_app = "RPJPDApp", @data_ng_controller = "validateCtrl" }))
    {
        <div class="span12">
            @if (!Html.ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    @Html.ValidationSummary()
                </div>
            }

            @if (ViewBag.Info != "" && ViewBag.Info != null)
            {
                <div class="alert alert-success">@ViewBag.Info</div>
            }
            <div class="alert-delete"></div>
            <div class="widget">
                <div class="widget-header">
                    <i class="icon-list-alt"></i>
                    <h3>Evaluasi RPJPD - Evaluasi Simpul</h3>
                </div>
            </div>
        </div>

        <div class="span12">
            <div class="widget">
                <div class="widget-content">
                    <table id="list" class="table table-striped table-bordered dt-responsive nowrap header-cursor" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Nomor</th>
                                <th>Aspek</th>
                                <th>Penjelasan Hasil Pengendalian dan Evaluasi</th>
                                <th>Catatan Penting</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                    </table>

                    <br>
                    <button type="button" style="display:block;" class="btn btn-success" id="btnTambah"><i class="btn-icon-only icon-plus"> Tambah </i></button>
                    <br>
                </div>
            </div>
        </div>

        <div class="modal fade" id="confirm-delete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">

                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title" id="myModalLabel">Konfirmasi Hapus</h4>
                    </div>

                    <div class="modal-body">
                        <p>Apakah anda yakin menghapus data<b><i class="nmprgrm"></i></b> ?</p>
                        <p class="debug-url"></p>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Batal</button>
                        <a class="btn btn-danger btn-ok">Hapus</a>
                    </div>
                </div>
            </div>
        </div>

    <div class="modal fade" id="ModalExistData" role="dialog">
        <div class="modal-dialog modal-sm">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal">&times;</button>
              <h4 class="modal-title">Informasi</h4>
            </div>
            <div class="modal-body">
              <p>Data sudah ada.</p>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
    </div>
        
    }
</body>
</html>

<script>
    jQuery(document).ready(function () {

        if ('@ViewBag.HasUnitKey' == "True") {
            document.getElementById("unitorganisasi-flexdatalist").disabled = true;
        }

        jQuery("#btnTambah").click(function () {
            
            //var table = $('#list').DataTable();
            //if (table.data().count() > 0) {
            //    $('#ModalExistData').modal('show');
            //}
            //else
            //{
                window.location.href = '@Url.Action("EvaluasiSimpulCreate", "RPJPD")';
            //}

        });
        
        var table = $("#list").DataTable();
        $('#list tbody').on('click', 'tr', function () {
            var sData = table.row(this).data()
            //kdTahun = sData["KDTAHUN"];
            nomor = sData["NOMOR"];

            // show hide button after user click row
            document.getElementById("btnTambah").style.display = "block";
        });

    });

    $('.flexdatalist').flexdatalist({
        cache: false,
        searchContain: true,
        textProperty: '{KDUNIT}' + ' ' + '{NMUNIT}',
        valueProperty: 'iso2',
        minLength: 0,
        focusFirstResult: true,
        selectionRequired: true,
        noResultsText: 'Tidak ada hasil untuk "{keyword}"',
        visibleProperties: ["KDUNIT", "NMUNIT"],
        searchIn: ["KDUNIT", "NMUNIT"],
        url: '@Url.Content("~/")' + 'RPJPD/GetUnitOrganization/',
        relatives: '#relative'
    }).on("select:flexdatalist", function (event, data) {
        $('#UnitKodeSelected').val(data.UNITKEY);
        $('#UnitNameSelected').val(data.NMUNIT);
    });

    $("#btnCari").click(function () {
        //kdTahun = '';

        var table = $("#list").DataTable();
        table.ajax.reload();

        // hide add button after user click seacrh button
        //document.getElementById("btnTambah").style.display = "block";
    });

    var app = angular.module('RPJPDApp', []);
    app.controller('validateCtrl', function ($scope) {
        $scope.nomor = '@ViewBag.nomor';
    });

    //delete function
    $(document).on("click", ".btn-ok", function (e) {
        if (deleteStatus == true) //only 1 working in 1 click ok function
        {
            var url = '@Url.Content("~/")' + "RPJPD/DeleteEvaluasiSimpul";
            $.post(url, {nomor: nomor}, function (data) {
                if (data == "Deleted") {
                    oTable = $('#list').DataTable();
                    oTable.draw();
                    // add alert after delete
                    addAlert();
                }
                else {
                    alert("Terjadi kesalahan! Error" + data);
                }
            });
            deleteStatus = false;
            $('#confirm-delete').modal('hide');//if success then hide
        }

    })

    $(document).on("click", ".OpenModal", function (e) {
        e.preventDefault();
        deleteStatus = true;
        var _self = $(this);
        var _NOMOR = _self.data('NOMOR');
        $(".nomor").text(_NOMOR);

        $(_self.attr('href')).modal('show');
    });

    function addAlert() {
        var _nomor = $(".nomor").text();
        var div = document.createElement('div');
        div.className = 'alert alert-success';
        div.innerHTML =
            '<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>\
                 Evaluasi bijak <b>' + _nomor + '</b> berhasil dihapus.';

        document.getElementsByClassName("alert-delete")[0].appendChild(div);
    }



</script>