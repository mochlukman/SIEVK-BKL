@{
    ViewBag.Title = "Mapping - Kegiatan 90 (lama) ke Kepmen 050";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script>
        var deleteStatus = true;
        var IDdelete = 0;

        var idPrgrm = '@ViewBag.idPrgrm';
        var idKeg90 = '@ViewBag.idKeg90';
        var idKEG50 = '@ViewBag.idKEG50';

        $(document).ready(function () {        
            $('[data-toggle="tooltip"]').tooltip();
        
            $("#IDProgram90Selected").val('@ViewBag.idprgrm90')
            $("#NameProgram90Selected").val('@ViewBag.programName90')
            $("#program-flexdatalist").val('@ViewBag.programName90')

            $("#IDKegiatan90Selected").val('@ViewBag.idKeg90')
            $("#NameKegiatan90Selected").val('@ViewBag.kegiatanName90')
            $("#kegiatan-flexdatalist").val('@ViewBag.kegiatanName90')
        
            $("#list").DataTable({
                "processing": false, // for show progress bar
                "serverSide": true, // for process server side
                "filter": true, // this is for disable filter (search box)
                "orderMulti": false, // for disable multiple column at once
                "pageLength": 10,
                "scrollCollapse": true,
                "scrollX": true,
                "scrollY": "350px", //cukup untuk 10 row
                "ajax": {
                    "url": '@Url.Content("~/")' + "Mapping/LoadDataMappingKegiatan90_50",
                    "type": "POST",
                    "datatype": "json",
                    "data": {
                        "idKeg90": function () { return $('#IDKegiatan90Selected').val() }
                    }
                },
                "columnDefs":
                [
                {
                    "targets": [0,1,2,3,4],
                    "searchable": true,
                    "orderable": true
                },
                {
                    "targets": [5,6,7],
                    "visible": false,
                    "searchable": false
                }
                ],
                "columns": [
                    { "data": "NUPRGRM050", "name": "NUPRGRM050", "autoWidth": true },
                    { "data": "NMPRGRM050", "name": "NMPRGRM050", "autoWidth": true },
                    { "data": "NUKEG050", "name": "NUKEG050", "autoWidth": true },
                    { "data": "NMKEG050", "name": "NMKEG050", "autoWidth": true },
                    { "data": "NMTAHUN", "name": "NMTAHUN", "autoWidth": true },
                    { "data": "IDKEG90", "name": "IDKEG90", "autoWidth": true }, //hide
                    { "data": "IDKEG050", "name": "IDKEG050", "autoWidth": true }, //hide
                    { "data": "KDTAHUN", "name": "KDTAHUN", "autoWidth": true }, //hide
                    {
                        "render": function (data, type, full, meta)
                        {
                            return '<a class="btn btn-md btn-success icon-edit" data-toggle="tooltip" data-placement="top" title="Ubah Mapping" href="@Url.Action("MappingKegiatan90_50Edit", "Mapping")' + "?idKeg90=" + full.IDKEG90 + "&idKeg050=" + full.IDKEG050 + "&kdTahun=" + full.KDTAHUN + '"></a>&nbsp;' +
                                '<a class="OpenModal btn btn-md btn-danger icon-trash" data-toggle="tooltip" data-placement="top" title="Hapus Mapping" data-kegiatan="' + full.NMKEG050 + '" href="#confirm-delete"></a>';
                        }
                    },
                ]

            });

        });

        </script>

</head>
<body>
    @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal", @name = "frmMappingKegiatan90_50", @ng_app = "Mapping90_50App", @data_ng_controller = "validateCtrl" }))
    {
        <div class="span12">
            @if (!Html.ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    @Html.ValidationSummary()
                </div>
            }

            @if (ViewBag.Info != "" && ViewBag.Info != null)
            {
                <div class="alert alert-success">@ViewBag.Info</div>
            }
            <div class="alert-delete"></div>
            <div class="widget">
                <div class="widget-header">
                    <i class="icon-list-alt"></i>
                    <h3>Mapping - Kegiatan 90 (lama) ke Kepmen 050</h3>
                </div>
                <div class="widget-content">
                    <fieldset>
                        <div class="form-group">
                            <label class="control-label" for="program">Program</label>
                            <div class="controls-filter">
                                <input type="text"   id="program" name="program" ng-invalid ng-model="program" class="form-control input-sm flexdatalistprogram span6" placeholder='Isi Nama Program' required>
                                @Html.Hidden("IDProgram90Selected")
                                @Html.Hidden("NameProgram90Selected")
                                <span style="color:maroon" ng-show="frmMappingKegiatan90_50.program.$dirty && frmMappingKegiatan90_50.program.$invalid">
                                    <span ng-show="frmMappingKegiatan90_50.program.$error.required">Program harus diisi</span>
                                </span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="kegiatan">Kegiatan</label>
                            <div class="controls-filter">
                                <input type="text" id="kegiatan" name="kegiatan" ng-invalid ng-model="kegiatan" class="form-control input-sm flexdatalistkegiatan span6" placeholder='Isi Nama Kegiatan' required>
                                @Html.Hidden("IDKegiatan90Selected")
                                @Html.Hidden("NameKegiatan90Selected")
                                <span style="color:maroon" ng-show="frmMappingKegiatan90_50.kegiatan.$dirty && frmMappingKegiatan90_50.kegiatan.$invalid">
                                    <span ng-show="frmMappingKegiatan90_50.kegiatan.$error.required">Kegiatan harus diisi</span>
                                </span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="controls-filter">
                                @*<input type="button" value="Cari" id="btnCari" />*@
                                <button type="button" class="btn btn-primary" id="btnCari" ng-disabled="frmMappingKegiatan90_50.$invalid"><i class="btn-icon-only icon-search"> Cari </i></button>
                            </div>
                        </div>
                    </fieldset>
                </div>
            </div>
        </div>

        <div class="span12">
            <div class="widget">
                <div class="widget-content">
                    <table id="list" class="table table-striped table-bordered dt-responsive nowrap header-cursor" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Nomor Program</th>
                                <th>Nama Program</th>
                                <th>Nomor Kegiatan</th>
                                <th>Nama Kegiatan</th>
                                <th>Tahun</th>
                                <th>ID Kegiatan</th>
                                <th>ID Kegiatan 90</th>
                                <th>KD Tahun</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                    </table>
                    <br>
                    <button type="button" style="display:block;" class="btn btn-success" id="btnTambah"><i class="btn-icon-only icon-plus"> Tambah </i></button>
                    <br>
                </div>
            </div>
        </div>


        <div class="modal fade" id="confirm-delete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">

                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title" id="myModalLabel">Konfirmasi Hapus</h4>
                    </div>

                    <div class="modal-body">
                        <p>Apakah anda yakin menghapus data mapping <b><i class="mapping"></i></b> ?</p>
                        <p class="debug-url"></p>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Batal</button>
                        <a class="btn btn-danger btn-ok">Hapus</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="modal fade" id="ModalExistData" role="dialog">
            <div class="modal-dialog modal-sm">
                <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Informasi</h4>
                </div>
                <div class="modal-body">
                    <p>Data mapping sudah ada.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
                </div>
            </div>
        </div>
        
        
    }
</body>
</html>

<script>

    jQuery(document).ready(function () {
        //document.getElementById("btnCari").disabled = true;

        jQuery("#btnTambah").click(function () {
            //var _idPrgrm = $('#IDProgram90Selected').val();
            //alert(_idPrgrm);
            var _idKeg = $('#IDKegiatan90Selected').val();
            if (_idKeg == "") {
                return;
            }

            //var table = $('#listdetail').DataTable();
            //if (table.data().count() > 0) {
            //    $('#ModalExistData').modal('show');
            //}
            //else {
            window.location.href = '@Url.Action("MappingKegiatan90_50Create", "Mapping")' + "?idKeg90=" + _idKeg;
            //}

        });

        var table = $("#list").DataTable();
        $('#list tbody').on('click', 'tr', function () {
            var sData = table.row(this).data()
            idKeg90 = sData["IDKEG90"];
            idKEG50 = sData["IDKEG90"];

        });
    });

    $('.flexdatalistprogram').flexdatalist({
        cache: false,
        searchContain: true,
        textProperty: '{NUPRGRM90}' + ' ' + '{NMPRGRM90}',
        valueProperty: 'iso2',
        minLength: 0,
        focusFirstResult: true,
        selectionRequired: true,
        noResultsText: 'Tidak ada hasil untuk "{keyword}"',
        visibleProperties: ["NUPRGRM90", "NMPRGRM90"],
        searchIn: ["NUPRGRM90", "NMPRGRM90"],
        url: '@Url.Content("~/")' + 'Mapping/GetMPGRM90/',
        //params: paramsKey,
        relatives: '#relative'
    }).on("select:flexdatalist", function (event, data) {
        $('#IDProgram90Selected').val(data.IDPRGRM90);
        $('#NameProgram90Selected').val(data.NMPRGRM90);

        $('#kegiatan').val('').parent().find("ul.flexdatalist-multiple li.value").remove();
    });

    var paramsKeyKeg = { idPgrm90:"" };
    $('.flexdatalistkegiatan').on('before:flexdatalist.data', function (event) {
        var prg = $('#IDProgram90Selected').val();
        paramsKeyKeg = { idPgrm90: prg }
        $('.flexdatalistkegiatan').flexdatalist('params', paramsKeyKeg);
    });

    $('.flexdatalistkegiatan').flexdatalist({
        cache: false,
        searchContain: true,
        textProperty: '{NUKEG90}' + ' ' + '{NMKEG90}',
        valueProperty: 'iso2',
        minLength: 0,
        focusFirstResult: true,
        selectionRequired: true,
        noResultsText: 'Tidak ada hasil untuk "{keyword}"',
        visibleProperties: ["NUKEG90", "NMKEG90"],
        searchIn: ["NUKEG90", "NMKEG90"],
        url: '@Url.Content("~/")' + 'Mapping/GetMKEGIATAN90/',
        params: paramsKeyKeg,
        relatives: '#relative'
    }).on("select:flexdatalist", function (event, data) {
        $('#IDKegiatan90Selected').val(data.IDKEG90);
        $('#NameKegiatan90Selected').val(data.NMKEG90);
    });

    $("#btnCari").click(function () {
        //idKeg90 = "";
        var table = $("#list").DataTable();
        table.ajax.reload();

        //document.getElementById("btnTambah").style.display = "block";
    });


    var app = angular.module('Mapping90_50App', []);
    app.controller('validateCtrl', function ($scope) {
        $scope.program = '@ViewBag.programName90';
        $scope.kegiatan = '@ViewBag.kegiatanName90';
    });

    //delete function
    $(document).on("click", ".btn-ok", function (e) {
        if (deleteStatus == true) //only 1 working in 1 click ok function
        {
            var url = '@Url.Content("~/")' + "Mapping/DeleteMappingKegiatan90_50";
            $.post(url, { idKeg90: idKeg90, idKEG50: idKEG50 }, function (data) {
                if (data == "Deleted") {
                    oTable = $('#list').DataTable();
                    oTable.draw();
                    // add alert after delete
                    addAlert();
                }
                else {
                    alert("Terjadi kesalahan! Error" + data);
                }
            });
            deleteStatus = false;
            $('#confirm-delete').modal('hide');//if success then hide
        }

    })

    $(document).on("click", ".OpenModal", function (e) {
        e.preventDefault();
        deleteStatus = true;
        var _self = $(this);
        var _namKeg = _self.data('NameKegiatan90Selected');
        $(".namKeg").text(_namKeg);

        $(_self.attr('href')).modal('show');
    });

    function addAlert() {
        var _namKeg = $(".namKeg").text();
        var div = document.createElement('div');
        div.className = 'alert alert-success';
        div.innerHTML =
            '<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>\
                 Mapping kegiatan <b>' + _namKeg + '</b> berhasil dihapus.';

        document.getElementsByClassName("alert-delete")[0].appendChild(div);
    }


</script>