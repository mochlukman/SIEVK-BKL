@model SIEVK.Domain.Common.UserGroups

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <style>
        .controls {
            margin-bottom: 20px;
            margin-right: 10px;
        }
    </style>
</head>
<body>
    @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal", @name = "frmUserGroup", @ng_app = "UserGroupApp", @data_ng_controller = "validateCtrl" }))
{
        @Html.AntiForgeryToken()

        <div class="span12">
            @if (!Html.ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    @Html.ValidationSummary()
                </div>
            }
            <div class="widget">
                <div class="widget-header">
                    <i class="icon-file"></i>
                    <h3>@ViewBag.Title</h3>
                </div>
                <div class="widget-content">
                    <fieldset>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => Model.ID)

                        <div class="form-group">
                            <label class="control-label" for="UserName">Nama Group<i class="icon-asterisk supscript"></i></label>
                            <div class="controls">
                                @Html.TextBoxFor(model => Model.GroupName, new { @class = "span3", @maxlength = "100", @ng_required = "true", @ng_model = "GroupName" })
                                <span style="color:maroon" ng-show="frmUserGroup.GroupName.$dirty && frmUserGroup.GroupName.$invalid">
                                    <span ng-show="frmUserGroup.GroupName.$error.required">Nama Group harus diisi</span>
                                </span>
                            </div>
                        </div>


                        @if (Model.ID > 0)
                        {
                            <div class="form-group">
                            <label class="control-label" for="IsActive">Status Aktif<i class="icon-asterisk supscript"></i></label>
                            <div class="controls">
                                @Html.DropDownList("UserGroupStatusEnableCombo", null, new { @class = "form-control input-sm span2" })
                            </div>
                        </div>
                        }                        

                        <div class="form-actions">
                            <button type="submit" class="btn btn-primary" ng-disabled="frmUserGroup.$invalid">
                                <i class=" btn-icon-only icon-save">
                                </i>Simpan
                            </button>


                            <button type="button" class="btn btn-default" id="btnClose"><i class="btn-icon-only icon-reply"> Kembali </i></button>
                        </div>
                    </fieldset>
                </div>
            </div>
        </div>

    }

</body>
</html>

<script>
    jQuery("#btnClose").click(function () { jQuery(location).attr("href", "@Html.Raw(@Url.Content("~/UserGroups/Index/"))"); });

    $(function () {
        $('.form-horizontal').submit(function () {
            $("input[type='submit']", this)
              .val("Please Wait...")
              .attr('disabled', 'disabled');
            return true;
        });
    });

    var app = angular.module('UserGroupApp', []);
    app.controller('validateCtrl', function ($scope) {
        $scope.GroupName = '@Model.GroupName';
    });
</script>
