@{
    ViewBag.Title = "RENJA - Evaluasi Bijak";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script>
    var deleteStatus = true;
    var IDdelete = 0;

    var kdTahun = '@ViewBag.kdTahun';
    var kdUnit = '@ViewBag.kdUnit';
    var nomor = '@ViewBag.nomor';      

    $(document).ready(function () {

        $('[data-toggle="tooltip"]').tooltip();

        if (kdUnit != "") {
            $('#UnitKodeSelected').val(kdUnit);
            document.getElementById("unitorganisasi-flexdatalist").value = '@ViewBag.flexdatalist';
        }

        $("#list").DataTable({
            "processing": false, // for show progress bar
            "serverSide": true, // for process server side
            "filter": true, // this is for disable filter (search box)
            "orderMulti": false, // for disable multiple column at once
            "pageLength": 10,
            "scrollCollapse": true,
            "scrollX": true,
            "scrollY": "350px", //cukup untuk 10 row
            "ajax": {
                "url": '@Url.Content("~/")' + "RENJA/LoadDataEvaluasiBijak",
                "type": "POST",
                "datatype": "json",
                "data": {
                    "kdTahun": function () { return $('#TahunAnggaranCombo').val() },
                    "kdUnit": function () { return $('#UnitKodeSelected').val() }
                }
            },
            "columnDefs":
            [
                {
                    "targets": [0],
                    "searchable": true,
                    "orderable": true,
                    "fnCreatedCell": function (nTd, sData, oData, iRow, iCol) {
                        var $currencyCell = $(nTd);
                        var commaValue = $currencyCell.text().replace(/(\d)(?=(\d\d\d)+(?!\d))/g, "$1.");
                        $currencyCell.text(commaValue);
                    },
                    "className": "text-right",
                },
                {
                    "targets": [1,2,7],
                    "visible": false,
                    "searchable": false
                },
                {
                    "targets": [4],
                    "render": function (data, type, row) {
                        return data == '1' ? 'Ya' : 'Tidak'
                    }
                }
            ],
            "fixedColumns": {
                "leftColumns": 0
            },
            "columns": [
                { "data": "NOMOR", "name": "NOMOR", "autoWidth": true }, //bisa ditambahkan title
                { "data": "KDTAHUN", "name": "KDTAHUN", "autoWidth": true }, //hide
                { "data": "UNITKEY", "name": "UNITKEY", "autoWidth": true }, //hide
                { "data": "URAIAN", "name": "URAIAN", "autoWidth": true },
                { "data": "KESESUAIAN", "name": "KESESUAIAN", "autoWidth": true },
                { "data": "MASALAH", "name": "MASALAH", "autoWidth": true },
                { "data": "SOLUSI", "name": "SOLUSI", "autoWidth": true },
                { "data": "KET", "name": "KET", "autoWidth": true },
                { 
                    "render": function (data, type, full, meta) {
                        return '<a class="btn btn-md btn-success icon-edit" data-toggle="tooltip" data-placement="top" title="Ubah Evaluasi" href="@Url.Action("EvaluasiBijakEdit", "RENJA")' + "?kdTahun=" + full.KDTAHUN + "&kdUnit=" + full.UNITKEY + "&nomor=" + full.NOMOR + '"></a>&nbsp;' +
                          '<a class="OpenModal btn btn-md btn-danger icon-trash" data-toggle="tooltip" data-placement="top" title="Hapus Data" data-nmprgrm="' + full.NMPRGRM + '" href="#confirm-delete"></a>';

                      }
                },
            ]

        });

    });

    </script>

</head>
<body>
    @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal", @name = "frmEvaluasiBijak", @ng_app = "RENJAApp", @data_ng_controller = "validateCtrl" }))
    {
        <div class="span12">
            @if (!Html.ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    @Html.ValidationSummary()
                </div>
            }

            @if (ViewBag.Info != "" && ViewBag.Info != null)
            {
                <div class="alert alert-success">@ViewBag.Info</div>
            }
            <div class="alert-delete"></div>
            <div class="widget">
                <div class="widget-header">
                    <i class="icon-list-alt"></i>
                    <h3>Evaluasi RENJA - Evaluasi Bijak</h3>
                </div>
                <div class="widget-content">
                    <fieldset>
                        <div class="form-group">
                            <label class="control-label" for="Unit">Unit Organisasi</label>
                            <div class="controls-filter">
                                <input type="text" id="unitorganisasi" name="unitorganisasi" ng-invalid ng-model="unitorganisasi" class="form-control input-sm flexdatalist span6" placeholder='Isi Nama Unit Organisasi' required>
                                @Html.Hidden("UnitKodeSelected")
                                @Html.Hidden("UnitNameSelected")
                                <span style="color:maroon" ng-show="frmEvaluasiBijak.unitorganisasi.$dirty && frmEvaluasiBijak.unitorganisasi.$invalid">
                                    <span ng-show="frmEvaluasiBijak.unitorganisasi.$error.required">Unit Organisasi harus diisi</span>
                                </span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label" for="TahunAnggaranCombo">Tahun Anggaran</label>
                            <div class="controls-filter">
                                @Html.DropDownList("TahunAnggaranCombo", null, new { @class = "form-control input-sm span2" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="controls-filter">
                                <button type="button" class="btn btn-primary" id="btnCari" ng-disabled="frmEvaluasiBijak.$invalid"><i class="btn-icon-only icon-search"> Cari </i></button>
                            </div>
                        </div>
                    </fieldset>
                </div>
            </div>
        </div>

        <div class="span12">
            <div class="widget">
                <div class="widget-content">
                    <table id="list" class="table table-striped table-bordered dt-responsive nowrap header-cursor" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Nomor</th>
                                <th>Tahun</th>
                                <th>Unit</th>
                                <th>Jenis Kegiatan</th>
                                <th>Kesesuaian</th>
                                <th>Faktor Penyebab Ketidak sesuaian</th>
                                <th>Tindak Lanjut Penyempurnaan Apabila tidak</th>
                                <th>Keterangan</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                    </table>

                    <br>
                    <button type="button" style="display:block;" class="btn btn-success" id="btnTambah"><i class="btn-icon-only icon-plus"> Tambah </i></button>
                    <br>
                </div>
            </div>
        </div>

        <div class="modal fade" id="confirm-delete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">

                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title" id="myModalLabel">Konfirmasi Hapus</h4>
                    </div>

                    <div class="modal-body">
                        <p>Apakah anda yakin menghapus data <b><i class="nmprgrm"></i></b> ?</p>
                        <p class="debug-url"></p>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Batal</button>
                        <a class="btn btn-danger btn-ok">Hapus</a>
                    </div>
                </div>
            </div>
        </div>

    <div class="modal fade" id="ModalExistData" role="dialog">
        <div class="modal-dialog modal-sm">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal">&times;</button>
              <h4 class="modal-title">Informasi</h4>
            </div>
            <div class="modal-body">
              <p>Data sudah ada.</p>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
    </div>
        
    }
</body>
</html>

<script>
    jQuery(document).ready(function () {

        if ('@ViewBag.HasUnitKey' == "True") {
            document.getElementById("unitorganisasi-flexdatalist").disabled = true;
        }

        jQuery("#btnTambah").click(function () {
            kdTahun = $('#TahunAnggaranCombo').val();
            if(kdTahun == ""){
                return;
            }
            kdUnit = $('#UnitKodeSelected').val();
            if (kdUnit == "") {
                return;
            }

            //var table = $('#list').DataTable();
            //if (table.data().count() > 0) {
            //    $('#ModalExistData').modal('show');
            //}
            //else
            //{
            window.location.href = '@Url.Action("EvaluasiBijakCreate", "RENJA")' + "?kdTahun=" + kdTahun + "&kdUnit=" + kdUnit;
            //}

        });
        
        var table = $("#list").DataTable();
        $('#list tbody').on('click', 'tr', function () {
            var sData = table.row(this).data()
            //kdTahun = sData["KDTAHUN"];
            nomor = sData["NOMOR"];

            // show hide button after user click row
            document.getElementById("btnTambah").style.display = "block";
        });

    });

    $('.flexdatalist').flexdatalist({
        cache: false,
        searchContain: true,
        textProperty: '{KDUNIT}' + ' ' + '{NMUNIT}',
        valueProperty: 'iso2',
        minLength: 0,
        focusFirstResult: true,
        selectionRequired: true,
        noResultsText: 'Tidak ada hasil untuk "{keyword}"',
        visibleProperties: ["KDUNIT", "NMUNIT"],
        searchIn: ["KDUNIT", "NMUNIT"],
        url: '@Url.Content("~/")' + 'RENJA/GetUnitOrganization/',
        relatives: '#relative'
    }).on("select:flexdatalist", function (event, data) {
        $('#UnitKodeSelected').val(data.UNITKEY);
        $('#UnitNameSelected').val(data.NMUNIT);
    });

    $("#btnCari").click(function () {
        //kdTahun = '';

        var table = $("#list").DataTable();
        table.ajax.reload();

        // hide add button after user click seacrh button
        //document.getElementById("btnTambah").style.display = "block";
    });

    var app = angular.module('RENJAApp', []);
    app.controller('validateCtrl', function ($scope) {
        $scope.kdTahun = '@ViewBag.kdTahun';
    });

    //delete function
    $(document).on("click", ".btn-ok", function (e) {
        if (deleteStatus == true) //only 1 working in 1 click ok function
        {
            var url = '@Url.Content("~/")' + "RENJA/DeleteEvaluasiBijak";
            $.post(url, { kdtahun: $('#TahunAnggaranCombo').val(), kdUnit: $('#UnitKodeSelected').val(), nomor: nomor}, function (data) {
                if (data == "Deleted") {
                    oTable = $('#list').DataTable();
                    oTable.draw();
                    // add alert after delete
                    addAlert();
                }
                else {
                    alert("Terjadi kesalahan! Error" + data);
                }
            });
            deleteStatus = false;
            $('#confirm-delete').modal('hide');//if success then hide
        }

    })

    $(document).on("click", ".OpenModal", function (e) {
        e.preventDefault();
        deleteStatus = true;
        var _self = $(this);
        var _NOMOR = _self.data('NOMOR');
        $(".nomor").text(_NOMOR);

        $(_self.attr('href')).modal('show');
    });

    function addAlert() {
        var _nomor = $(".nomor").text();
        var div = document.createElement('div');
        div.className = 'alert alert-success';
        div.innerHTML =
            '<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>\
                 Evaluasi bijak <b>' + _nomor + '</b> berhasil dihapus.';

        document.getElementsByClassName("alert-delete")[0].appendChild(div);
    }



</script>