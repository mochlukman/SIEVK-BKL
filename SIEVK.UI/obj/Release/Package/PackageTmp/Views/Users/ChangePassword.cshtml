@model SIEVK.Domain.Common.Users

        <html>
        <head>
            <meta name="viewport" content="width=device-width" />
            <title>Ubah Password</title>
            <style>
                .controls {
                    margin-bottom: 20px;
                    margin-right: 10px;
                }
            </style>
        </head>
        <body>
            @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal", @name = "frmChangePassword", @ng_app = "ChangePassApp", @data_ng_controller = "validateCtrl" }))
            {
                @Html.AntiForgeryToken()

                <div class="span12">
                    @if (!Html.ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            @Html.ValidationSummary()
                        </div>
                    }
                    
                    @if (ViewBag.Info != "" && ViewBag.Info != null)
                    {
                        <div class="alert alert-success">@ViewBag.Info</div>
                    }

                    <div class="widget">
                        <div class="widget-header">
                            <i class="icon-file"></i>
                            <h3>Ubah Password</h3>
                        </div>
                        <div class="widget-content">
                            @*<form class="form-horizontal" action="#" method="POST">*@
                            <fieldset>
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => Model.ID)
                                @Html.Hidden("isLoginUser", (string)ViewBag.isLoginUser)

                                <div class="form-group">
                                    <label class="control-label" for="UserName">Username</label>
                                    <div class="controls">
                                        @Html.TextBoxFor(model => Model.UserName, new { @class = "span3", @maxlength = "50", @ng_required = "true", @ng_model = "UserName" })
                                    </div>
                                </div>

                                <div class="form-group" id="divPassword">
                                    <label class="control-label" for="Password">Password<i class="icon-asterisk supscript"></i></label>
                                    <div class="controls">
                                        @Html.TextBoxFor(model => Model.Password, new { @class = "span3", @maxlength = "50", @ng_required = "true", @ng_model = "Password", @type = "password" })
                                        <span style="color:maroon" ng-show="frmChangePassword.Password.$dirty && frmChangePassword.Password.$invalid">
                                            <span ng-show="frmChangePassword.Password.$error.required">Password harus diisi</span>
                                        </span>
                                    </div>
                                </div>

                                <div class="form-group" id="divPasswordConfirm">
                                    <label class="control-label" for="Password">Konfirmasi Password<i class="icon-asterisk supscript"></i></label>
                                    <div class="controls">
                                        <input id="PasswordConfirm" name="PasswordConfirm" value="" ng-model="PasswordConfirm" class="span3" type="password" compare-to="Password" required />
                                        <span style="color:maroon" ng-show="frmChangePassword.PasswordConfirm.$dirty && frmChangePassword.PasswordConfirm.$invalid">
                                            <span ng-show="frmChangePassword.PasswordConfirm.$error.compareTo">Konfirmasi password tidak sama dengan password</span>
                                        </span>
                                    </div>
                                </div>

                                @*Button Action*@
                                <div class="form-actions">
                                    <button type="submit" class="btn btn-primary" ng-disabled="frmChangePassword.$invalid"><i class="btn-icon-only icon-save"> </i>Simpan</button>
                                    @if (ViewBag.isLoginUser == "false")
                                    { 
                                        <button type="button" class="btn btn-default" id="btnClose"><i class="btn-icon-only icon-reply"> Kembali </i></button>
                                    }
                                </div>
                            </fieldset>
                            @*</form>*@
                        </div>
                    </div>
                </div>

            }

        </body>
    </html>

    <script type="text/javascript">
        jQuery(document).ready(function () {
            $('#UserName').attr('readonly', true);
        });

        jQuery("#btnClose").click(function () { jQuery(location).attr("href", "@Html.Raw(@Url.Content("~/Users/Index/"))"); });

        var app = angular.module('ChangePassApp', []);
        app.controller('validateCtrl', function ($scope) {
            $scope.UserName = '@Model.UserName';
        });

        var compareTo = function () {
            return {
                require: "ngModel",
                scope: {
                    otherModelValue: "=compareTo"
                },
                link: function (scope, element, attributes, ngModel) {

                    ngModel.$validators.compareTo = function (modelValue) {
                        return modelValue == scope.otherModelValue;
                    };

                    scope.$watch("otherModelValue", function () {
                        ngModel.$validate();
                    });
                }
            };
        };

        app.directive("compareTo", compareTo);

    </script>

