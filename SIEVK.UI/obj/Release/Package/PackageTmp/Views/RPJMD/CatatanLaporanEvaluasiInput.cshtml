@model SIEVK.Domain.RPJMD.RPJMDCatatanLaporanEvaluasi


        <html>
        <head>
            <meta name="viewport" content="width=device-width" />
            <title>Details</title>
            <style>
                .controls {
                    margin-bottom: 20px;
                    margin-right: 10px;
                }
            </style>
        </head>
        <body>
            @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal", @name = "frmCat", @ng_app="CatApp", @data_ng_controller="validateCtrl" }))
            {
                @Html.AntiForgeryToken()
                <div class="span12">
                    @if (!Html.ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            @Html.ValidationSummary()
                        </div>
                    }
                    <div class="widget">
                        <div class="widget-header">
                            <i class="icon-file"></i>
                            <h3>@ViewBag.Title</h3>
                        </div>
                        <div class="widget-content">
                            <fieldset>
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => Model.KDTAHUN)

                                @{if (ViewBag.isCreate == "false")
                                  {
                                      <div class="form-group">
                                    <label class="control-label" for="TahunAnggaran">Tahun Anggaran<i class="icon-asterisk supscript"></i></label>
                                    <div class="controls">
                                        @Html.DropDownList("TahunAnggaranCombo", null, new { @class = "form-control input-sm span3", @disabled = "disabled" })
                                    </div>
                                </div>
                                      
                                <div class="form-group">
                                    <label class="control-label" for="NoCatatan">No Catatan<i class="icon-asterisk supscript"></i></label>
                                    <div class="controls">
                                        @Html.TextBoxFor(model => Model.NOCTT, new { @class = "span3", @maxlength = "50", @ng_required = "true", @ng_model = "NOCTT", @readonly = "readonly" })
                                        <span style="color:maroon" ng-show="frmCat.NOCTT.$dirty && frmCat.NOCTT.$invalid">
                                            <span ng-show="frmCat.NOCTT.$error.required">No Catatan harus diisi</span>
                                        </span>
                                    </div>
                                </div>
                                }
                                else
                                {
                                       <div class="form-group">
                                    <label class="control-label" for="TahunAnggaran">Tahun Anggaran<i class="icon-asterisk supscript"></i></label>
                                    <div class="controls">
                                        @Html.DropDownList("TahunAnggaranCombo", null, new { @class = "form-control input-sm span3" })
                                    </div>
                                </div>
                                      
                                      <div class="form-group">
                                    <label class="control-label" for="NoCatatan">No Catatan<i class="icon-asterisk supscript"></i></label>
                                    <div class="controls">
                                        @Html.TextBoxFor(model => Model.NOCTT, new { @class = "span3", @maxlength = "50", @ng_required = "true", @ng_model = "NOCTT"  })
                                        <span style="color:maroon" ng-show="frmCat.NOCTT.$dirty && frmCat.NOCTT.$invalid">
                                            <span ng-show="frmCat.NOCTT.$error.required">No Catatan harus diisi</span>
                                        </span>
                                    </div>
                                </div>
                                  }
                                  }
                                <div class="form-group">
                                    <label class="control-label" for="NmCatatan">Nama Catatan<i class="icon-asterisk supscript"></i></label>
                                    <div class="controls">
                                        @Html.TextBoxFor(model => Model.NMCTT, new { @class = "span3", @maxlength = "50", @ng_required = "true", @ng_model = "NMCTT" })
                                        <span style="color:maroon" ng-show="frmCat.NMCTT.$dirty && frmCat.NMCTT.$invalid">
                                            <span ng-show="frmCat.NMCTT.$error.required">Nama Catatan harus diisi</span>
                                        </span>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label" for="Isi Catatan">Isi Catatan<i class="icon-asterisk supscript"></i></label>
                                    <div class="controls">
                                        @Html.TextAreaFor(model => Model.ISICTT, new { @class = "span5", @ng_required = "true", @ng_model = "ISICTT", @rows = "5" })
                                        <span style="color:maroon" ng-show="frmCat.ISICTT.$dirty && frmCat.ISICTT.$invalid">
                                            <span ng-show="frmCat.ISICTT.$error.required">Isi Catatan harus diisi</span>
                                        </span>
                                    </div>
                                </div>

                                @*Button Action*@
                                <div class="form-actions">
                                    <button type="submit" class="btn btn-primary" ng-disabled="frmCat.$invalid">
                                        <i class=" btn-icon-only icon-save">
                                        </i>Simpan
                                    </button>
                                    <button type="button" class="btn btn-default" id="btnClose" ><i class="btn-icon-only icon-reply"> Kembali </i></button>
                                </div>
                            </fieldset>
                            @*</form>*@
                        </div>
                    </div>
                </div>
            }
            
</body>
    </html>

    <script type="text/javascript">
        jQuery(document).ready(function () {
            @{String kodetahun = "";
              String noctt = "";
              String nmctt = "";
              String isictt = "";
              if (Model != null)
              {
                  kodetahun = Model.KDTAHUN;
                  noctt = Model.NOCTT;
                  nmctt = Model.NMCTT;
                  isictt = Model.ISICTT;
              }
        }
        jQuery("#btnClose").click(function () { jQuery(location).attr("href", "@Html.Raw(@Url.Content("~/RPJMD/CatatanLaporanEvaluasi?kdtahun=" + kodetahun ))"); });    
        });
      
        $(function () {
            $('.form-horizontal').submit(function () {
                $("input[type='submit']", this)
                  .val("Please Wait...")
                  .attr('disabled', 'disabled');
                return true;
            });
        });

        var app = angular.module('CatApp', []);
        app.controller('validateCtrl', function ($scope) {
            $scope.NOCTT = '@noctt';
            $scope.NMCTT = '@nmctt';
            $scope.ISICTT = '@isictt';
        });
              

    </script>

