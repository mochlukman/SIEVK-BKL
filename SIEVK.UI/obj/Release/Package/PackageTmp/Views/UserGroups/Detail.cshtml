@model SIEVK.Domain.Common.UserGroups

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Title</title>
    <style>
        .controls {
            margin-bottom: 20px;
            margin-right: 10px;
        }
    </style>
</head>
<body>

    <div class="span12">
        @if (!Html.ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                @Html.ValidationSummary()
            </div>
        }
        <div class="widget">
            <div class="widget-header">
                <i class="icon-file"></i>
                <h3>@ViewBag.Title</h3>
            </div>
            <div class="widget-content">
                <form class="form-horizontal">
                    <fieldset>
                        @Html.HiddenFor(model => Model.ID)

                        <div class="form-group">
                            <label class="control-label" for="UserName">Nama Group</label>
                            <div class="controls">
                                <label class="value-label">: @Model.GroupName</label>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label" for="IsActive">Aktif Status</label>
                            <div class="controls">
                                <label class="value-label">: @Model.IsActiveText</label>
                        </div>

                            <div class="form-group">
                                <table id="listUserGroups" class="table table-striped table-bordered dt-responsive nowrap dataTable no-footer" width="100%" cellspacing="0" role="grid" aria-describedby="listUserGroups_info" style="width: 100%;">
                                    <thead>
                                        <tr role="row">
                                            <th class="sorting_disabled" rowspan="1" colspan="1">Nama Menu</th>
                                            <th class="sorting_disabled" rowspan="1" colspan="1">Deskripsi</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (ViewBag.List.Count > 0)
                                        {
                                            var dic = new Dictionary<int, int>();  
                                            foreach (SIEVK.Domain.Common.PrivilegeInfo item in ViewBag.List)
                                            {                                               
                                                @Html.Raw("<tr role='row' class='odd'>" +
                                                "<td>" + item.NavigationLabel);                                           
                                                @Html.Raw("</td>" +
                                                "<td>" + item.Description + "</td>" +
                                                "</tr>");
                                            }
                                        }
                                        else
                                        {
                                            @Html.Raw("<tr id='TRNoData' role='row' class='odd'>" +
                                                "<td colspan='2'>Tidak ada data hak akses menu dalam group ini</td>" +
                                        "</tr>");
                                        }

                                    </tbody>
                                </table>
                            </div>
                    </div>


                    <div class="form-actions">
                        <button type="button" class="btn btn-default" id="btnClose"><i class="btn-icon-only icon-reply"> Kembali </i></button>
                    </div>
                </fieldset>
            </form>
            </div>
        </div>
    </div>

</body>
</html>

<script type="text/javascript">
        jQuery(document).ready(function () {

        });
        jQuery("#btnClose").click(function () { jQuery(location).attr("href", "@Html.Raw(@Url.Content("~/UserGroups/Index/"))"); });

</script>