                    </div>
                </div>
            </div>*@
    }
</body>
</html>
<script>
    $(function () {
        $('input[name="FilterDate"]').daterangepicker({
            singleDatePicker: true,
            showDropdowns: true,
            locale: {
                format: 'DD/MM/YYYY'
            }
        });
    });
</script>
