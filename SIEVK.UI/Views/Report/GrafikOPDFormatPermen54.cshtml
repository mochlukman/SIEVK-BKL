

        <html>
        <head>
            <meta name="viewport" content="width=device-width" />
            <title>Realisasi SKPD</title>
            <style>
                .controls {
                    margin-bottom: 20px;
                    margin-right: 10px;
                }
            </style>
        </head>
        <body>
            @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal", target = "_blank" }))
            {
                @Html.AntiForgeryToken()
                <div class="span12">
                    @if (!Html.ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            @Html.ValidationSummary()
                        </div>
                    }
                    <div class="widget">
                        <div class="widget-header">
                            <i class="icon-bar-chart"></i>
                            <h3>Realisasi SKPD</h3>
                        </div>
                        <div class="widget-content">
                            <fieldset>
                                <div class="form-group">
                                    <label class="control-label" for="TipeLaporan">Tipe Laporan</label>
                                    <div class="controls-filter">
                                        @Html.DropDownList("TipeLaporanCombo", null, new { @class = "form-control input-sm span3" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label" for="TahapanCombo">Tahapan</label>
                                    <div class="controls-filter">
                                        @Html.DropDownList("TahapanCombo", null, new { @class = "form-control input-sm span3" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label" for="TriwulanCombo">Triwulan</label>
                                    <div class="controls-filter">
                                        @Html.DropDownList("TriwulanCombo", null, new { @class = "form-control input-sm span3" })
                                    </div>
                                </div>

                                @*Button Action*@
                                <div class="form-actions">
                                    <button type="submit" class="btn btn-primary">
                                        <i class=" btn-icon-only icon-print">
                                        </i>Cetak
                                    </button>
                                </div>
                            </fieldset>
                            @*</form>*@
                        </div>
                    </div>
                </div>
            }
</body>
    </html>

